{
    "name": "hex-toys",
    "version": "1.0.0",
    "main": "hardhat.config.js",
    "license": "MIT",
    "scripts": {
        "build": "npm run clean && npx hardhat compile --network pls",
        "deploy-addnft": "npx hardhat run scripts/deploy-addnft.js --network pls",
        "deploy-claim": "npx hardhat run scripts/deploy-claim.js --network pls",
        "deploy-heartheads": "npx hardhat run scripts/deploy-hearthead.js --network pls",
        "deploy-nftfactory": "npx hardhat run scripts/deploy-nftfactory.js --network pls",
        "deploy-marketplace": "npx hardhat run scripts/deploy-marketplace.js --network pls",
        "deploy-lootbox": "npx hardhat run scripts/deploy-lootbox.js --network pls",
        "deploy-staking": "npx hardhat run scripts/deploy-staking.js --network pls",
        "deploy-subscribe": "npx hardhat run scripts/deploy-subscribe.js --network pls",
        "deploy-hextoys": "npx hardhat run scripts/deploy-hextoysnft.js --network pls",
        "initialize-staking": "npx hardhat run scripts/initialize-staking.js --network pls",
        "verify-contract": "npx hardhat run scripts/verify-contract.js --network pls",
        "upgrade-contracts": "npx hardhat run scripts/upgrade-contracts.js --network pls",
        "lint": "prettier-standard --format",
        "clean": "rimraf cache artifacts"
    },
    "dependencies": {
        "@nomiclabs/hardhat-ethers": "^2.2.3",
        "@nomiclabs/hardhat-etherscan": "^3.1.7",
        "@openzeppelin/contracts": "^4.1.0",
        "@openzeppelin/contracts-ethereum-package": "^3.0.0",
        "@openzeppelin/contracts-upgradeable": "^4.1.0",
        "@openzeppelin/hardhat-upgrades": "^1.28.0",
